@model ScoreMe.UI.Models.ApplicationInformationVM
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "";
}




<div class="col-sm-1 col-sm-offset-11" style="position: absolute;">
    <span class="label label-danger pull-right badgemargin">@Model.ListCount</span>
</div>

<table class="table table-bordered">
    <tbody>
        @foreach (var item in Model.RApplicationInformationList)
        {
        <tr>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.AppName)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.ShortName)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.Point)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.NetUsage)
            </td>
            <td class="col-md-1 shsingle text-center" style="font-size:16px;">
                <a class="btn btn-primary active  btn-xs" title="Redaktə et" href="@Url.Action("Edit","ApplicationInformation", new { id = item.ID})"><span class="fa fa-pencil"></span></a>
                <span title="Sil"> @Html.ActionLink(" ", "Delete", "ApplicationInformation", new { id = item.ID }, new { @onclick = "return confirm('Silmək istədiyinizə əminsinizmi?.');", @class = "glyphicon glyphicon-trash" })</span>
            </td>

        </tr>
        }
    </tbody>
</table>


<div class="box-footer clearfix">
    Səhifə @(Model.Paging.PageCount < Model.Paging.PageNumber ? 0 : Model.Paging.PageNumber) (cəmi @Model.Paging.PageCount)
    @Html.PagedListPager(Model.Paging, page => Url.Action("Index", new { page }))
</div>






