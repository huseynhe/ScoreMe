                @Html.ValidationMessageFor(model => model.PriceCount, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.PointCount, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.PointCount, new { htmlAttributes = new { @class = "form-control", tabindex = 8 } })
                @Html.ValidationMessageFor(model => model.PointCount, "", new { @class = "text-danger" })

            </div>


        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-6 control-label">
                @Html.ActionLink("Listə Geri Dön", "Index", "AppInformation", null, new { @class = "btn btn-primary btn-lg btn-block" })
            </div>
            <div class="col-md-6 control-label">
                <input id="frmPosition" type="submit" value="Yarat" class="btn btn-primary btn-lg btn-block" tabindex="9" />
            </div>
        </div>
    </div>
